<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="/styles-register.css">
</head>
<body>
    <header>
        <h1>Register</h1>
        <button class="btn-s"><a href="/">Home</a></button>
    </header>
    <main>
        <% if (typeof errors != 'undefined' && errors.length > 0) { %>
            <ul>
                <% errors.forEach(function(error) { %>
                    <li><%= error.msg %></li>
                <% }) %>
            </ul>
        <% } %>
        <form id="registrationForm" action="/users/register" method="POST">
            <div>
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" required value="<%= typeof username != 'undefined' ? username : '' %>">
            </div>
            <div>
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required value="<%= typeof email != 'undefined' ? email : '' %>">
            </div>
            <div>
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required>
            </div>
            <div>
                <label for="password2">Confirm Password:</label>
                <input type="password" id="password2" name="password2" required>
            </div>
            <button type="submit" id="registerButton">Register</button>
        </form>
        <p>Already have an account? <button class="btn-s"><a href="/users/login">Login here</a></button>.</p>
    </main>
</body>
</html>
